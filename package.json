{
  "name": "lms-center",
  "version": "1.0.0",
  "description": "LMS Assignment Notification Center",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "tsc && electron .",
    "build": "tsc",
    "watch": "tsc --watch",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "lms",
    "notifications",
    "electron"
  ],
  "author": {
    "name": "Kareem Adel Mohammed Zayed",
    "email": "",
    "url": "https://github.com/Kareem-3del"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kareem-3del/lms-center"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/pdfkit": "^0.17.3",
    "axios": "^1.6.0",
    "docx": "^9.5.1",
    "docx-pdf": "^0.0.1",
    "electron-store": "^8.1.0",
    "katex": "^0.16.23",
    "libreoffice-convert": "^1.7.0",
    "mammoth": "^1.11.0",
    "markdown-it": "^14.1.0",
    "pdf-poppler": "^0.2.3",
    "pdfkit": "^0.17.2"
  },
  "build": {
    "appId": "com.kareem.lms-center",
    "productName": "LMS Center",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "renderer/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LMS Center"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.education"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education"
    }
  }
}
